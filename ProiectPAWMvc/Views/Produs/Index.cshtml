@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@model List<Produs>
@{
    ViewData["Title"]="Portal produse";
    List<Produs> produse = Model;
}
<h1> Portal de produse</h1>
@{
    foreach(Produs produs in produse)
    {
        <h2> <a asp-action="Detalii" asp-controller="Produs" asp-route-prodid="@produs.ID">@produs.Nume</a></h2>
        <h2><a asp-action="ModificaProdus" asp-controller="Produs" asp-route-produsId="@produs.ID" >Modifica produs </a></h2>

    }
}

