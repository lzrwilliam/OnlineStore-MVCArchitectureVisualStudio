@model ProiectPAW.wwwroot.Models.AtributCategorie

@{
    ViewData["Title"] = "Editează Atribut";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditAtribut">
    <div class="form-group">
        <label asp-for="Nume" class="control-label"></label>
        <input asp-for="Nume" class="form-control" />
        <span asp-validation-for="Nume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tip" class="control-label">Tip</label>
        <select asp-for="Tip" class="form-control">
            <option value="text">Text</option>
            <option value="number">Număr</option>
            <option value="boolean">Boolean</option>

            <!-- putem adauga alte tipuri de atribute-->
        </select>
    </div>
    <input type="hidden" asp-for="CategorieID" value="@ViewBag.CategorieId" />
    <div class="form-group">
        <input type="submit" value="Salvează" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
