@model ProiectPAW.wwwroot.Models.Categorie

@{
    ViewData["Title"] = "Șterge Categorie";
}

<h1>@ViewData["Title"]</h1>

<h3>Esti sigur ca vrei sa stergi aceasta categorie?</h3>

<div>
    <h4>@Model.Nume</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ParentCategorieID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ParentCategorieID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <input type="submit" value="Șterge" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Anuleaza</a>
        </div>
    </form>
</div>
