@model ProiectPAW.wwwroot.Models.AtributCategorie

@{
    ViewData["Title"] = "Adauga Atribut";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateAtribut" method="post">
    <input type="hidden" asp-for="CategorieID" />

    <div class="form-group">
        <label asp-for="Nume" class="control-label">Nume Atribut</label>
        <input asp-for="Nume" class="form-control" />
        <span asp-validation-for="Nume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tip" class="control-label">Tip Atribut</label>
        <select asp-for="Tip" class="form-control">
            <option value="">Selectează tipul...</option>
            <option value="text">Text</option>
            <option value="number">Număr</option>
            <option value="boolean">Boolean</option>
            <!-- Alte tipuri de atribute pot fi se pun aici -->
        </select>
        <span asp-validation-for="Tip" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvează Atribut</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
